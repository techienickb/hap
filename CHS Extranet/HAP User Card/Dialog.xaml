<Window x:Class="HAP.UserCard.Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dialog" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" ShowInTaskbar="False" Icon="/HAP%20User%20Card;component/usercard.ico" SizeToContent="WidthAndHeight">
    <StackPanel>
        <StackPanel Orientation="Horizontal" MinHeight="32" Margin="16" MinWidth="200">
            <Image Height="32" VerticalAlignment="Top" Name="image1" Stretch="Fill" Width="32" Source="/HAP%20User%20Card;component/Images/263.png" />
            <TextBlock Text="Label" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch" Name="text" TextWrapping="Wrap" />
        </StackPanel>
        <Grid Background="#FFF0F0F0">
            <Button Content="OK" Name="ok" Height="24" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80" IsDefault="True" Click="ok_Click" />
        </Grid>
    </StackPanel>
</Window>
