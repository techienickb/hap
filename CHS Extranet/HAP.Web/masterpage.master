<%@ Master Language="C#" %>
<%@ Register Assembly="HAP.Web" Namespace="HAP.Web.Controls" TagPrefix="hap" %>
<!DOCTYPE html>

<html>
    <head runat="server">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
        <title>Home Access Plus</title>
        <asp:ContentPlaceHolder runat="server" ID="viewport"><meta name="viewport" content="width=992px" /></asp:ContentPlaceHolder>
        <link rel="shortcut icon" href="~/favicon.ico" />
        <link href="~/style/jquery-ui.css" rel="stylesheet" type="text/css" />
        <link href="~/style/basestyle.css" rel="stylesheet" type="text/css" />
        <link href="~/style/mobile-base.css" rel="stylesheet" type="text/css" media="handheld" />
        <link href="~/style/mobile-base.css" rel="stylesheet" type="text/css" media="screen and (max-device-width: 480px)" />
        <link rel="icon" type="image/vnd.microsoft.icon" href="~/favicon.ico" />
        <script src="<%: ResolveClientUrl("~/scripts/jquery-1.8.2.min.js") %>"></script>
        <script src="<%: ResolveClientUrl("~/scripts/jquery-ui-1.9.1.custom.min.js") %>"></script>
        <script src="<%: ResolveClientUrl("~/api/js") %>"></script>
        <%if (false) { %>
        <script src="<%: ResolveClientUrl("~/Scripts/hap.web.js.js") %>"></script>
        <%} %>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
        <hap:HAPTag runat="server" />
        <asp:ContentPlaceHolder id="head" runat="server" />
        <script type="text/javascript" src="<%: ResolveClientUrl("~/Scripts/modernizer.js") %>"></script>
    </head>
    <body>
        <form runat="server">
            <div id="hapContent" data-role="page">
                <header id="hapHeader" class="tile-color">
                    <div id="hapTitle">
                        <asp:ContentPlaceHolder id="title" runat="server"><asp:HyperLink runat="server" NavigateUrl="~/"><hap:LocalResource runat="server" StringPath="homeaccessplus" /></asp:HyperLink></asp:ContentPlaceHolder>|<a href="#" id="hapTitleMore"></a>
                    </div>
                    <asp:ContentPlaceHolder id="header" runat="server" />
                </header>
                <asp:LoginView runat="server">
                    <LoggedInTemplate>
                        <a href="#" id="hapUserTitle"><%=((HAP.AD.User)Membership.GetUser()).DisplayName %> (<asp:LoginName runat="server" />)</a>
                        <div id="hapUserMenu" class="hapmenu tile-border-color">
                            <div class="mypic" style="background-image: url(<%:ResolveClientUrl("~/api/mypic") %>)"></div>
                            <a href="<%:ResolveClientUrl("~/")%>#me"><hap:LocalResource ID="LocalResource1" runat="server" StringPath="editprofile" /></a>
                            <asp:LoginStatus runat="server" />
                        </div>
                    </LoggedInTemplate>
                </asp:LoginView>
                <div id="baseContent">
                    <asp:ContentPlaceHolder id="body" runat="server" />
                </div>
            </div>
            <script type="text/javascript">
                $(document).ready(function () {
                    $("#hapContent").css("min-height", document.documentElement.clientHeight - $("#hapHeader").height() + "px");
                });
                $(window).resize(function () {
                    $("#hapContent").css("min-height", document.documentElement.clientHeight - $("#hapHeader").height() + "px");
                });
            </script>
        </form>
    </body>
</html>